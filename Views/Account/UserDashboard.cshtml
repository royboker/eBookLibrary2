
@{
    ViewBag.Title = "User Dashboard";
}

@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
    </script>
}
<h1 class="dashboard-title">Welcome, @Session["UserName"]!</h1>

<div class="dashboard-container">
    <div class="dashboard-card" onclick="location.href='@Url.Action("UpdateDetails", "Account")'">
        <i class="fas fa-user-edit dashboard-icon"></i>
        <h3>Update Details</h3>
    </div>
    <div class="dashboard-card" onclick="location.href='@Url.Action("UserPurchases", "Account")'">
        <i class="fas fa-shopping-cart dashboard-icon"></i>
        <h3>Books Purchased</h3>
    </div>
    <div class="dashboard-card" onclick="location.href='@Url.Action("MyBorrows", "Account")'">
        <i class="fas fa-book dashboard-icon"></i>
        <h3>Borrowed Books</h3>
    </div>
    <div class="dashboard-card" onclick="location.href='@Url.Action("UserOrders", "Account")'">
        <i class="fas fa-receipt dashboard-icon"></i>
        <h3>My Orders</h3>
    </div>
    <div class="dashboard-card" onclick="location.href='@Url.Action("UserPayments", "Account")'">
        <i class="fas fa-credit-card dashboard-icon"></i>
        <h3>My Payments</h3>
    </div>
</div>


<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .dashboard-title {
        text-align: center;
        font-size: 2.5rem;
        color: #333;
        margin: 20px 0;
    }

    .dashboard-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 20px;
    }

    .dashboard-card {
        background: linear-gradient(135deg, #0088cc, #0056b3);
        color: #fff;
        width: 250px;
        height: 150px;
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        cursor: pointer;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .dashboard-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .dashboard-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .dashboard-card:nth-child(1) {
        background: linear-gradient(135deg, #ff7f50, #ff4500); /* כתום */
    }

    .dashboard-card:nth-child(2) {
        background: linear-gradient(135deg, #32cd32, #228b22); /* ירוק */
    }

    .dashboard-card:nth-child(3) {
        background: linear-gradient(135deg, #8a2be2, #4b0082); /* סגול */
    }

    .dashboard-card:nth-child(4) {
        background: linear-gradient(135deg, #ffa500, #ff8c00); /* צהוב-כתום */
    }

    .dashboard-card:nth-child(5) {
        background: linear-gradient(135deg, #4682b4, #1e90ff); /* כחול */
    }


    h3 {
        font-size: 1.2rem;
        font-weight: bold;
    }
</style>

