<form class="form" method="post" action="@Url.Action("EditBook", "Admin")">
    <p class="title">Edit Book Details</p>
    <p class="message">Update the details of the book below.</p>

    @Html.HiddenFor(model => model.BookId)

    <label>
        @Html.TextBoxFor(model => model.BuyPrice, new { @class = "input", placeholder = "Enter sale price" })
        <span>Sale Price</span>
    </label>

    <label>
        @Html.TextBoxFor(model => model.BorrowPrice, new { @class = "input", placeholder = "Enter borrow price" })
        <span>Borrow Price</span>
    </label>

    <label>
        @Html.TextBoxFor(model => model.Stock, new { @class = "input", placeholder = "Enter stock" })
        <span>Stock</span>
    </label>

    <label>
        @Html.TextBoxFor(model => model.Genre, new { @class = "input", placeholder = "Enter genre" })
        <span>Genre</span>
    </label>

    <label>
        @Html.TextBoxFor(model => model.Format, new { @class = "input", placeholder = "Enter format" })
        <span>Format</span>
    </label>

    <button class="submit">Save Changes</button>
    <a href="@Url.Action("ShowAdminLibrary", "Admin")" class="btn btn-secondary">Cancel</a>
</form>

